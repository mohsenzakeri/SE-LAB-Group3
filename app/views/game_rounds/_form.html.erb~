<script type="text/javascript">
$(document).ready(function (){
    validate();
    $('#firstname, #lastname, #city, #country, #fruit, #car, #color, #job, #food, #thing, #animal, #flower').change(validate);
});

function validate(){
    if ($('#firstname').val().length   >   0   &&
        $('#lastname').val().length  >   0   &&
        $('#city').val().length    >   0 &&
  $('#country').val().length   >   0   &&
        $('#fruit').val().length  >   0   &&
        $('#car').val().length    >   0 &&
  $('#color').val().length   >   0   &&
        $('#job').val().length  >   0   &&
        $('#food').val().length    >   0 &&
  $('#thing').val().length   >   0   &&
        $('#animal').val().length  >   0   &&
        $('#flower').val().length    >   0) {
        $("input[type=submit]").prop("disabled", false);
    }
    else {
        $("input[type=submit]").prop("disabled", true);
    }
}

var clock = $(".clock").FlipClock(3600, {
	autoStart: true,
	countdown: true,
	clockFace: 'MinuteCounter',
	callbacks: {
		stop: function() { 
			alert("s");
		}
	}
	}	
);

</script>

