</div>

<script type="text/javascript">
<%@start = @current_timer.value %>
var clock = jQuery('.clock').FlipClock(<%=@start%>, {
	autoStart: true,
	countdown: true,
	clockFace: 'MinuteCounter',
	callbacks: {

		interval: function(){
			<%
			if @start == 7
				  @value = @current_timer.value
				  @current_timer.value = @value - 1
				  if @current_timer.save%>
				  	alert(<%=@current_timer.value.to_s%>);
				  <%else%>
				   	alert("Error">);
				   <%end%>
				 
			<%end%>


		},

		stop: function() { 
			game_id = <%= UserGame.find(params[:id]).game.id  %>;
			window.location.replace("/game_rounds/new?gameid=" + game_id);
		}

	}
	}	
);



</script>
