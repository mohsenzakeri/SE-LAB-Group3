
$("#join").html("<%= escape_javascript(render(:partial => 'user_games/join', :object => @game)) %>");
$("#joined_players").html("<%= escape_javascript(render(:partial => 'user_games/join_players', :object => @game)) %>");
$("#joinednumber<%= @game.id %>").html("<%= escape_javascript ( render(:partial => 'user_games/joins', :object => @game )) %>");
$("#joined").html("<%= j render(:partial => 'user_games/joined_players_name' , :object => @game ) %>");

<% publish_to "/user_games/new"  do %>
	$("#joinednumber<%= @game.id %>").html("<%= j render(:partial => 'user_games/joins' ,  :object => @game )%>");
	$("#join").html("<%= escape_javascript(render(:partial => 'user_games/join', :object => @game)) %>");
	$("#joined_players").html("<%= escape_javascript(render(:partial => 'user_games/join_players', :object => @game)) %>");
	$("#joined").html("<%= j render(:partial => 'user_games/joined_players_name' , :object => @game) %>");
<%end%>	

<%publish_to "/user_games/start_game/#{@game.id}" do%>
	$("#started_game").html("<%= escape_javascript(render(:partial => 'user_games/start_game'))%>")
<%end%>


$("#new_user_game")[0].reset();
$('#div[id^="joinednumber"]').reset();
$("#joined").reset();