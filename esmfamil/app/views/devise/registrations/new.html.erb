<%= render "devise/shared/links" %>

<h2 style="color:yellow">ثبت‌نام عضو جدید</h2>
<br/>
<br/>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="row">
  <div class="col-xs-1"></div>


  <div class="col-xs-5 field">

  <div class="row">
  <div class = "col-xs-4">نام:    
  </div>
  <div class = "col-xs-8">
    <%= f.text_field :firstname%>
  </div>
  </div>

  <hr class="paper-line" >

  <div class="row">
  <div class="col-xs-4">
   نام خانوادگی:
  </div>
  <div class = "col-xs-8">
    <%= f.text_field :lastname %>
  </div>
  </div>
  <hr class="paper-line" >

  <div class="row">
   <div class="col-xs-4">نام مستعار:
   </div>
   <div class = "col-xs-8">
    <%= f.text_field :nickname %>
   </div>
  </div>

  <hr class="paper-line" >

  <div class="row">
  <div class="col-xs-4">تاریخ تولد:
  </div>
  <div class = "col-xs-8">
              <% f.datetime_select :birthdate %>
              <%=t :روز%><%= select_tag  "ja_birth_dd", options_for_select(1..31) %>/
              <%=t :ماه%><%= select_tag "ja_birth_mm", options_for_select(1..12) %>/  
              <%=t :سال%><%= select_year(1371, {:start_year => 1300, :end_year => 1384}, {:name =>"ja_birth_yyyy"}) %>    
  </div>
 </div>

  <hr class="paper-line" >

  
  </div>
  
  <div class="col-xs-5 field">
  
  <div class="row">
    <div class = "col-xs-6">ایمیل:    
    </div>
    <div class = "col-xs-6">
      <%= f.email_field :email, autofocus: true %> 
    </div>
  </div>
   
  <hr class="paper-line" >

  <div class="row">
    <div class="col-xs-6">گذرواژه: 
    </div>
    <div class = "col-xs-6">
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  </div>

  <hr class="paper-line" >
  
  <div class="row">
    
    <div class="col-xs-6">ورود مجدد گذرواژه: 
    </div>
    <div class = "col-xs-6">
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>

  <hr class="paper-line" >    

  <div class="row">
    
    <div class="col-xs-6"> لطفا متن موجود در تصویر را وارد کنید:
    </div>
    <div class = "col-xs-6">
      <%= text_field_tag :captcha %>
    </div>
  </div>
   
  <hr class="paper-line" >    


</div>
    <div class="col-xs-1"></div>

</div>





<div class="row">
<div class="col-xs-6"></div>
<div class="col-xs-6">
      <%= captcha_tag %>

  <div><%= f.submit "ثبت نام" %></div>
</div>
</div>
<% end %>

<%= render "devise/shared/links" %>
