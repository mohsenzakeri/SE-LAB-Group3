<%= render "devise/shared/links" %>

<h2 style="color:yellow">ثبت‌نام عضو جدید</h2>
<br/>
<br/>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="row">

  <div class = "col-xs-3">نام:    <hr class="paper-line" >
</div>
  <div class = "col-xs-3">
    <%= f.text_field :firstname%>
    <hr class="paper-line" >
  </div>
  <div class = "col-xs-3">ایمیل:    <hr class="paper-line" >
</div>
  <div class = "col-xs-3">
    <%= f.email_field :email, autofocus: true %> 
    <hr class="paper-line" >
  </div>

</div>

<div class="row">
  <div class="col-xs-3">نام مستعار:    <hr class="paper-line" >
</div>
  <div class = "col-xs-3">
    <%= f.text_field :nickname%>
    <hr class="paper-line" >
  </div>
  <div class="col-xs-3">گذرواژه:    <hr class="paper-line" >
</div>
  <div class = "col-xs-3">
   <%= f.password_field :password, autocomplete: "off" %>
    <hr class="paper-line" >
   </div>
</div>

<div class="row">
  <div class="col-xs-3">
   نام خانوادگی:    <hr class="paper-line" >
</div>
  <div class = "col-xs-3">
    <%= f.text_field :lastname %>
    <hr class="paper-line" >
  </div>
  <div class="col-xs-3">ورود مجدد گذرواژه:    <hr class="paper-line" >
</div>
  <div class = "col-xs-3">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    <hr class="paper-line" >
  </div>
</div>

<div class="row">
  <div class="col-xs-3">تاریخ تولد:    <hr class="paper-line" >
</div>
  <div class = "col-xs-3">
              <% f.datetime_select :birthdate %>
              <%=t :روز%><%= select_tag  "ja_birth_dd", options_for_select(1..31) %>/
              <%=t :ماه%><%= select_tag "ja_birth_mm", options_for_select(1..12) %>/  
              <%=t :سال%><%= select_year(1371, {:start_year => 1340, :end_year => 1384}, {:name =>"ja_birth_yyyy"}) %>
    <hr class="paper-line" >
 </div>
<div class="col-xs-3"> لطفا متن موجود در تصویر را وارد کنید:    <hr class="paper-line" >
</div>
  <div class = "col-xs-3">
  <%= captcha_tag %>
  <%= text_field_tag :captcha %>
    <hr class="paper-line" >
</div>
</div>


<div class="row">
<div class="col-xs-6"></div>
<div class="col-xs-6">
  <div><%= f.submit "ثبت نام" %></div>
</div>
</div>
<% end %>

<%= render "devise/shared/links" %>
